{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/store/*": ["store/*"],
      "@/api/*": ["api/*"],
      "@/styles/*": ["styles/*"],
      "@/constants/*": ["constants/*"],
      "@/tools/*": ["tools/*"],
      "@/hooks/*": ["hooks/*"],
      "@/mocks/*": ["mocks/*"]
    }
  },
  "include": ["next.config.js", "next-env.d.ts", "**/*.ts", "**/*.tsx", "utils/sheets.ts"],
  "exclude": ["node_modules"]
}
